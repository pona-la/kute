[Unit]
Description=Stream to youtube
Wants=network-online.target tpr.service
After=network.target network-online.target tpr.service

[Service]
Type=simple
WorkingDirectory=/srv/tpr/ffmpeg/
EnvironmentFile=/etc/ffmpeg/youtube
ExecStart=bash /srv/tpr/ffmpeg/youtube.sh
User=streamer
Group=streamer

[Install]
WantedBy=multi-user.target
